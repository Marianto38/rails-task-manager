<div class="container col-6">
  <div class="row col-8">
  <h1> New Task </h1>

  <%= form_for @task do |f| %>
  <div>
  <%= f.label :title, "Insert Task"%>
  <h3>
  <%= f.text_field :title %>
  </div>
  <div>
  <%= f.label :details, "Details" %>
  <h3>
  <%= f.text_field :details %>
  <h3>
    <% unless f.object.new_record? %>
        <div class="checkbox">
          <label>
            <%= f.check_box :completed %> Completed
          </label>
        </div>
      <% end %>
  <%= f.submit %>
  <% end %>
  <div class="mt-5">
  <%= link_to "Back to List", tasks_path %>
  </div>
  </div>
</div>
